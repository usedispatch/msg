{
  "name": "@usedispatch/client",
  "version": "0.7.0",
  "description": "Client for Dispatch Protocol",
  "main": "lib/usedispatch_client/src/index.js",
  "types": "lib/usedispatch_client/src/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "npm run idl && tsc",
    "format": "prettier --write \"src/*.ts\"",
    "idl": "mkdir -p lib/target/idl && mkdir -p lib/target/types && cp ../target/idl/* ./lib/target/idl/ && cp ../target/types/* ./lib/target/types/",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build && echo 'Please run the tests manually before publish'",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [],
  "files": [
    "lib/**/*"
  ],
  "author": "Dispatch Protocol",
  "homepage": "https://usedispatch.net/",
  "license": "MIT or Apache 2.0",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/bs58": "^4.0.1",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "bs58": "^4.0.1",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "ts-jest": "^27.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@bonfida/spl-name-service": "^0.1.30",
    "@project-serum/anchor": "^0.24.2",
    "@solana/buffer-layout": "^4.0.0",
    "@solana/spl-token": "^0.2.0",
    "@solana/web3.js": "^1.36.0",
    "crypto-js": "^4.1.1"
  }
}

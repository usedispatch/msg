{
  "name": "@usedispatch/cli",
  "version": "0.0.4",
  "description": "Basic command line interface to send/receive messages on solana using Dispatch",
  "main": "./lib/index.js",
  "bin": {
    "dispatch-cli": "./lib/index.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && dispatch-cli",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "run-list": "ts-node src/index.ts list",
    "run-send": "ts-node src/index.ts send G2GGDc89qpuk21WgRUVPDY517uc6qR5yT4KX7AakyVR1 message1",
    "run-pop": "ts-node src/index.ts pop",
    "format": "prettier --write \"src/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build && echo 'Please run the tests manually before publish'",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [],
  "files": [
    "lib/**/*"
  ],
  "author": "Dispatch Protocol",
  "homepage": "https://usedispatch.net/",
  "license": "MIT or Apache 2.0",
  "devDependencies": {
    "@types/node": "^17.0.10",
    "@types/yargs": "^17.0.8",
    "ts-node": "^10.4.0",
    "prettier": "^2.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "yargs": "^17.3.1",
    "@usedispatch/client": "^0.0.10"
  }
}
